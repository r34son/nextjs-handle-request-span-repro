{
  "name": "nextjs-handle-request-span-repro",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "local": "rm -rf .next && next build && next start",
    "request": "TRACE_ID=$(head -c16 /dev/urandom | od -An -tx8 | tr -d ' \\n'); SPAN_ID=$(head -c8 /dev/urandom | od -An -tx8 | tr -d ' \\n'); echo \"Trace ID: $TRACE_ID\"; curl -v -H \"traceparent: 00-$TRACE_ID-$SPAN_ID-01\" -H \"tracestate: vendor=test\" http://localhost:3000/",
    "jaeger": "./jaeger-all-in-one --collector.otlp.http.host-port=:4318 --query.http-server.host-port=:16686"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.57.2",
    "@opentelemetry/resources": "^1.30.1",
    "@opentelemetry/sdk-node": "^0.57.2",
    "@opentelemetry/sdk-trace-base": "^1.30.1",
    "@opentelemetry/sdk-trace-node": "^1.30.1",
    "@opentelemetry/semantic-conventions": "^1.34.0",
    "next": "15.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.9.0+sha512.0486e394640d3c1fb3c9d43d49cf92879ff74f8516959c235308f5a8f62e2e19528a65cdc2a3058f587cde71eba3d5b56327c8c33a97e4c4051ca48a10ca2d5f"
}
